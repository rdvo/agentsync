# agentsync configuration
# Generated by 'agentsync init'

# Source of truth - where you edit skills
source: .shared

# Optional: Global skills (inherited by project skills)
# global_source: ~/.shared

# Target directories for different AI tools
targets:
  # Cursor
  - tool: cursor
    path: .cursor/rules
    enabled: true

  # Windsurf (Cascade)
  - tool: windsurf
    path: .windsurf/workflows
    enabled: true

  # Claude Code
  - tool: claude
    path: .claude/agents
    enabled: true

  - tool: claude
    path: .claude/skills
    enabled: true

  # OpenCode
  - tool: opencode
    path: .opencode/agent
    enabled: true

# Auto-sync daemon (true/false)
# Run 'agentsync watch -d' to start
watch: false

# Git hooks (true/false)
# Run 'agentsync init-hooks' to install
git_hooks: false
